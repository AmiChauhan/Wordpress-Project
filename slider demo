      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
<script>
$(document).ready(function () {
  $('.slider').slick({
    slidesToShow: 7, // Show 7 slides in view
    slidesToScroll: 1, // Scroll 1 slide at a time
    infinite: true, // Enable infinite scrolling
    arrows: true, // Enable navigation arrows
    centerMode: true, // Keep all slides aligned (no centering)
    focusOnSelect: true, // Allow clicking to select slides
  });

  // Add custom classes dynamically on initialization and before slide change
  const updateSlideClasses = (slick, currentSlide) => {
    const slides = slick.$slides; // Get all slides
    const totalSlides = slides.length;

    slides.removeClass('extra-small small medium big'); // Reset classes

    // Add classes dynamically
    slides.each(function (index) {
      const relativeIndex = (index - currentSlide + totalSlides) % totalSlides;
//   console.log(relativeIndex);
      if (relativeIndex === 0) {
        $(this).addClass('big'); // Center slide
      } else if (relativeIndex === 1 || relativeIndex === totalSlides - 1) {
        $(this).addClass('medium'); // Adjacent slides
      } else if (relativeIndex === 2 || relativeIndex === totalSlides - 2) {
        $(this).addClass('small'); // Outer visible slides
      }else if (relativeIndex === 3 || relativeIndex === totalSlides - 3) {
        $(this).addClass('extra-small'); // Outer visible slides
      }
       else {
        $(this).removeClass('extra-small small medium big'); // Reset hidden slides
      }
    });
  };

  // Initial class assignment
  $('.slider').on('init', function (event, slick) {
    updateSlideClasses(slick, slick.currentSlide);
  });

  // Update classes before slide change
  $('.slider').on('beforeChange', function (event, slick, currentSlide, nextSlide) {
    updateSlideClasses(slick, nextSlide);
  });
 

  // Initialize the slider
  $('.slider').slick('slickGoTo', 0); // Trigger the first update
});

    </script>
  
</body>
</html>





